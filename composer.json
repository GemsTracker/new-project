{
    "name": "gemstracker/new-project",
    "license": "BSD-3-Clause",
    "type": "project",
    "description": "New project files for Gemstracker",
    "homepage": "http://gemstracker.org/",
    "autoload": {
        "psr-0": {
            "NewProject_": "application/classes"
        },
        "psr-4": {
            "NewProject\\": "application/classes/NewProject"
        }
    },
    "authors": [
        {
            "name": "Matijs de Jong",
            "email": "mjong@magnafacta.nl"
        },
        {
            "name": "Menno Dekker",
            "email": "menno.dekker@erasmusmc.nl"
        },
        {
            "name": "Jasper van Gestel",
            "email": "jvangestel@gmail.com"
        },
        {
            "name": "Frank Santegoets",
            "email": "f.santegoets@erasmusmc.nl"
        },
        {
            "name": "Roel Faber",
            "email": "r.faber@erasmusmc.nl"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.0",
        "gemstracker/gemstracker": "dev-expressive",
        "gemstracker/api": "dev-master",
        "gemstracker/gemstracker-template": "dev-master",
        "gemstracker/gemstracker-responsive-template": "dev-master",
        "oomphinc/composer-installers-extender": "^1.1",
        "phing/phing": "^2.11"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0.8 || ^5.7.15",
        "phpunit/dbunit": "^3.0",
        "squizlabs/php_codesniffer": "^2.8.1",
        "zfcampus/zf-development-mode": "^3.1",
        "zendframework/zend-expressive-tooling": "^0.4.1",
        "filp/whoops": "^2.1.7",
        "mikey179/vfsStream": "^1.6"
    },
    "scripts": {
        "post-install-cmd": [
            "php vendor/phing/phing/bin/phing.php -f scripts/assetlinker.xml"
        ],
        "post-create-project-cmd": [
            "@development-enable"
        ],
        "development-disable": "zf-development-mode disable",
        "development-enable": "zf-development-mode enable",
        "development-status": "zf-development-mode status",
        "check": [
            "@cs-check",
            "@test"
        ],
        "clear-config-cache": "php bin/clear-config-cache.php",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "serve": "php -S 0.0.0.0:8080 -t htdocs htdocs/index.php",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    },
    "config": {
        "use-include-path": true
    },
    "extra": {
        "installer-types": ["library"],
        "installer-paths": {
            "htdocs/gems-responsive": ["gemstracker/gemstracker-responsive-template"],
            "htdocs/gems": ["gemstracker/gemstracker-template"]
        }
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/GemsTracker/gemstracker-template.git"
        },
        {
            "type": "git",
            "url": "https://github.com/GemsTracker/gemstracker-responsive-template.git"
        },
        {
            "type": "git",
            "url": "https://github.com/GemsTracker/api.git"
        },
        {
            "type": "git",
            "url": "https://github.com/MagnaFacta/zalt-loader.git"
        },
        {
            "type": "git",
            "url": "https://github.com/MagnaFacta/zalt-model.git"
        },
        {
            "type": "git",
            "url": "https://github.com/MagnaFacta/zalt-soap.git"
        }
    ]
}
